<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partial/admin/head.ejs") %>
</head>

<body>
    <div class="wrapper">
        <%- include("../partial/admin/sidenavbar.ejs") %>


            <div class="main">

                <%- include("../partial/admin/mainnavbar.ejs") %>


                    <section>
                        <div class="col-md-9">
                            <div class="row m-3">
                                <form action="/postnewsportal" method="POST" enctype="multipart/form-data">
                                    <h3>Add News</h3>

                                    <div class="mt-3 ">
                                        <label for="formGroupExampleInput " class="form-label ">Image</label>
                                        <input type="file" class="form-control " name="newsimages" required id="inputGroupFile04 " aria-describedby="inputGroupFileAddon04 " aria-label="Upload ">
                                    </div>
                                    <div class="mt-3 ">
                                        <label for="formGroupExampleInput " class="form-label ">Title</label>
                                        <input type="text" class="form-control " name="title" required id="formGroupExampleInput " placeholder="Give the Title ">
                                    </div>
                                    <div class="mt-3 ">
                                        <label for="formGroupExampleInput2 " class="form-label ">Description</label>
                                        <input type="text" class="form-control " name="description" required id="formGroupExampleInput2 " placeholder="Write the news in Details ">
                                    </div>
                                    <div>
                                        <button class="btn btn-primary offset-6 mt-2 " type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>

                            <h4 class="d-flex justify-content-center mt-2 " style="color:rgb(5, 187, 248)">News Details</h4>
                            <div class="viewnews  row d-flex justify-content-around  m-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Title</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Action</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% for(let i=0; i < uploadimage.length; i++  ) { %>
                                            <tr>

                                                <td>
                                                    <%= i+1 %>
                                                </td>
                                                <td>
                                                    <%= uploadimage[i].title %>
                                                </td>
                                                <td>
                                                    <%= uploadimage[i].description %>
                                                </td>
                                                <td>
                                                    <img src="/Images/<%= uploadimage[i].image %>" height="80px" width="80px" alt="">
                                                </td>
                                                <td>
                                                    <a href="/edit/<%=  uploadimage[i].id%>" class="btn btn-primary">edit</a>
                                                    <a href="/delete/<%=  uploadimage[i].id%>" class="btn btn-primary ">delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
            </div>
    </div>
    <%- include("../partial/admin/footer.ejs") %>

</body>

</html>